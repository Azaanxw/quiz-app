<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/quiz.css">
    <title>QuizHub Register</title>

</head>
<body>
    <div class="quiz-container">
        <a href="/" class="return-home-link">Return to Home</a>
        <h1>Quiz Time!</h1>
        <form action="/quiz-result" method="POST">
            <% quizData.forEach((question, index) => { %>
                <div class="question">
                    <p>Question <%= index + 1 %>: <%= question.question %></p>
                    <ul class="options">
                        <% const options = [question.correctAnswer, ...question.incorrectAnswers].sort(() => Math.random() - 0.5); %>
                        <% options.forEach((option) => { %>
                            <li>
                                <label>
                                    <input type="radio" name="answers[<%= index %>]" value="<%= option %>" required>
                                    <%= option %>
                                </label>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            <% }); %>
            
            <button type="submit">Submit Quiz</button>
        </form>
    </div>
    <div class="user-info">
        <% if (username) { %>
            <p>Welcome, <%= username %>!</p>
            <a href="/logout" class="logout-button">Logout</a>
        <% } else { %>
            <p>Welcome, Guest!</p>
        <% } %>
    </div>
</body>